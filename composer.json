{
    "name": "m12-cms/models",
    "description": "Reusable Eloquent model package for M12 CMS",
    "type": "library",
    "license": "Apache-2.0",

    "autoload": {
        "psr-4": {
            "M12\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "M12\\Models\\Tests\\": "tests/",
            "M12\\Models\\Database\\Factories\\": "database/factories/"
        }
    },

    "extra": {
        "laravel": {
            "providers": [
                "M12\\Providers\\ModelsServiceProvider"
            ]
        }
    },

    "minimum-stability": "dev",
    "prefer-stable": true,

    "require": {
        "php": "^8.2",
        "illuminate/database": "^12.0",
        "illuminate/support": "^12.0",
        "laravel/sanctum": "^4.0"
    },

    "require-dev": {
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^11.5",
        "laravel/pint": "^1.26",
        "phpstan/phpstan": "^2.0",
        "nunomaduro/larastan": "^3.0@beta"
    },

    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "pint": "pint",
        "check": [
            "composer pint",
            "composer analyse",
            "composer test"
        ]
    }
}
