{
    "name": "m12-cms/models",
    "description": "Reusable Eloquent model package for M12 CMS",
    "type": "library",
    "license": "Apache-2.0",
    "autoload": {
        "psr-4": {
            "M12\\": "src/",
            "M12\\Models\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "M12\\Models\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "M12\\Providers\\ModelsServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2",
        "illuminate/database": "^12.0",
        "illuminate/support": "^12.0",
        "laravel/sanctum": "^4.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^11.5",
        "laravel/pint": "^1.26",
        "phpstan/phpstan": "^2.0",
        "nunomaduro/larastan": "^3.0@beta"
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "pint": "pint",
        "dev:setup": "bash -lc \"if [ -d .git ]; then echo '-> Installing dev tools...'; npm install --no-audit --no-fund; npm run dev:hooks; else echo '-> .git not found, skipping dev setup'; fi\"",
        "post-install-cmd": [
            "bash -lc \"if [ -d .git ]; then composer dev:setup || true; fi\""
        ],
        "post-update-cmd": [
            "bash -lc \"if [ -d .git ]; then composer dev:setup || true; fi\""
        ]
    }
}
